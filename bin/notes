#!/usr/bin/env bash

DIR="${NOTES_DIR:-$HOME/Dropbox/notes}"
ARG=$1
DATE="$(date '+%Y%m%d%H%M%S')"
EXT=".md"

pushd () {
    command pushd "$@" > /dev/null
}

popd () {
    command popd "$@" > /dev/null
}

