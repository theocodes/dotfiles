#!/usr/bin/env bash

DIR="${NOTES_DIR:-$HOME/notes}"
ARG=$1
TODAY="$(date '+%Y-%m-%d')"

pushd () {
    command pushd "$@" > /dev/null
}

popd () {
    command popd "$@" > /dev/null
}

open_today_journal() {
  FILENAME="$DIR/journal/$TODAY.md"

  if [ ! -f $FILENAME ]; then
    TITLE="$(date '+%a %d %b %Y')"
    echo "# $TITLE" > $FILENAME
  fi

  nvim -c "norm Go" \
    -c "norm Go## $(date +%H:%M)" \
    -c "norm G2o" \
    -c "norm zz" \
    -c "startinsert" $FILENAME
}

open_note() {
  NAME=$(fzf --print-query --reverse --preview 'glow -s dark {}' --preview-window=right,60% | xargs | sed 's/\.md//')

  # bail if name is empty
  [ "$NAME" = "" ] && exit 0

  # replace spaces with underscores
  FILENAME="$DIR/${NAME// /_}.md"

  # create file and add title
  if [ ! -f $FILENAME ]; then
    TITLE="$(echo $NAME | awk '{for (i=1;i<=NF;i++) $i=toupper(substr($i,1,1)) substr($i,2)} 1')"
    echo "# $TITLE" > $FILENAME
  fi

  nvim -c "norm G2o" \
    -c "norm zz" \
    -c "startinsert" $FILENAME
}

pushd $DIR

if [ ! -z "$ARG" ]; then
  [ "$ARG" = "today" ] && open_today_journal && exit 0
fi

open_note

popd

