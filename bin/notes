create_note() {
  local TITLE="title placeholder"
  read -p "Enter title: " TITLE

  local TAGS="tags placeholder"
  read -p "Enter tags (comma separated): " TAGS

  echo "$TITLE"
  echo "$TAGS"
}

open_note() {
  # local NAME=$(fzf --print-query --preview 'glow -s dark {}' --height 100% --preview-window=top,80% | xargs | sed 's/\.md//')
  local NAME=$(fzf --print-query --preview 'glow -s dark {}' --height 100% --preview-window=top,80%)

  echo $NAME
  exit 0

  # bail if name is empty
  [ "$NAME" = "" ] && exit 0

  local FULLPATH="$DIR/${NAME// /_}"

  if [ -f $FULLPATH ]; then
    nvim ${FULLPATH}
    exit 0
  fi

  echo $FULLPATH
}

pushd $DIR

if [ ! -z "$ARG" ]; then
  [ "$ARG" = "new" ] && create_note && exit 0
fi

open_note

popd

